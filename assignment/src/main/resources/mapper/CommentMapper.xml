<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="okestro.assignment.repository.CommentMapper">


    <insert id="save" useGeneratedKeys="true" keyProperty="cno">
        insert into comment(bno, content, email, nickname)
        values (#{bno}, #{content}, #{email}, #{nickname})
    </insert>

    <select id="findByCno" resultType="Comment">
        select *
        from comment
        where cno = #{cno}
    </select>

    <select id="findCommentList" resultType="Comment">
        select *
        from comment
        where bno = #{bno}
    </select>

    <update id="update">
        update comment
        set content = #{commentDTO.content},
            update_time = #{commentDTO.updateTime}
        where cno = #{cno}
    </update>

    <delete id="deleteByCno">
        delete
        from comment
        where cno = #{cno}
    </delete>

</mapper>